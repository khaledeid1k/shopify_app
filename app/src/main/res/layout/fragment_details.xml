<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/brand"
        android:id="@+id/brand"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/brand"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lilyâ€™s Ankle Boots"
        android:id="@+id/brand_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/sku"
        android:id="@+id/sku"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/brand"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0590458902809"
        android:id="@+id/sku_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <TextView
        app:layout_constraintTop_toBottomOf="@+id/brand_value"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/condition"
        android:id="@+id/condition"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/condition"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Brand New, With Box"
        android:id="@+id/condition_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/sku_value"

        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/material"
        android:id="@+id/material"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/material"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Faux Sued, Velvet"
        android:id="@+id/material_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />




    <TextView
        app:layout_constraintTop_toBottomOf="@+id/condition_value"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/category"
        android:id="@+id/category"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Women Shoes"
        android:id="@+id/category_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/material_value"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/fitting"
        android:id="@+id/fitting"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/fitting"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="True To Size"
        android:id="@+id/fitting_value"
        style="@style/sub_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>