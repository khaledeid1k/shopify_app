<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_fav_item"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/tv_product_name_fav_item"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Faux Sued Ankle Boots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_fav_item"
        app:layout_constraintTop_toTopOf="@id/image_fav_item"
        />

    <TextView
        android:id="@+id/tv_product_size_fav_item"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7, Hot Pink"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_fav_item"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_fav_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name_fav_item" />

    <TextView

        android:id="@+id/tv_product_price_fav_item"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="49$"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_fav_item"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_fav_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_size_fav_item" />


</androidx.constraintlayout.widget.ConstraintLayout>