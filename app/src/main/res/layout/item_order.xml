<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_product_order"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_10sdp"
        tools:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_name_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Faux Sued Ankle Boots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_product_order"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tv_product_size_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7, Hot Pink"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name_order" />

    <TextView
        android:id="@+id/tv_product_price_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="49$"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_size_order" />

    <TextView
        android:id="@+id/tv_product_date_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22/10/202"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price_order" />

