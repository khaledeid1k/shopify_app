<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_product_order"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/tv_product_name_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faux Sued Ankle Boots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_product_order"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tv_product_size_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7, Hot Pink"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name_order" />

    <TextView
        android:id="@+id/tv_product_price_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49$"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_size_order" />

    <TextView
        android:id="@+id/tv_product_date_order"
        style="@style/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/10/202"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name_order"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price_order" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_order"
        app:layout_constraintTop_toBottomOf="@id/image_product_order" />

</androidx.constraintlayout.widget.ConstraintLayout>